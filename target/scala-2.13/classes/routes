# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET / controllers.HomeController.index


# Map static resources from the /public folder to the /assets URL path
GET /assets/*file controllers.Assets.versioned(path="/public", file: Asset)

# user/admin login
GET /login controllers.UserController.showLoginForm
POST /doLogin controllers.UserController.processLoginAttempt

# pages for authenticated users
GET /logout controllers.AuthenticatedUserController.logout
GET /landingPage controllers.LandingPageController.showLandingPage

# show contacts
GET /contacts controllers.ContactPageController.listContacts


# ROUTES CONCERNING THE PROJCET:
#TODO change frontpage with posts
GET  /frontpage                      controllers.HomeControllerSTOF.index
GET  /frontpage/sortedByDate         controllers.ContentController.sortByDate
GET  /frontpage/sortedByVotes        controllers.ContentController.sortByVotes
GET  /frontpage/searchByTag          controllers.ContentController.searchByTag(tag:String)
GET  /frontpage/new                  controllers.ContentController.newPost()
POST /frontpage                      controllers.ContentController.savePost()
GET  /frontpage/upvote               controllers.ContentController.upvote(id:Int)
GET  /frontpage/downvote             controllers.ContentController.downvote(id:Int)
GET  /frontpage/upvoteAnswer         controllers.ContentController.upvoteAnswer(id:Int)
GET  /frontpage/downvoteAnswer       controllers.ContentController.downvoteAnswer(id:Int)

GET /frontpage/newAnswer             controllers.ContentController.newAnswer(postId:Int)
GET  /postsWithAnswers               controllers.ContentController.postWithAnswers(postid:Int)
POST /frontpage/saveAnswer           controllers.ContentController.saveAnswer(postId:Int)
